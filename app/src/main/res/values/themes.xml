<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.MealWay" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/MainColor</item>
        <item name="colorSecondary">@color/MainColor</item>
        <item name="android:statusBarColor">@color/MainColor</item>
    </style>

    <style name="Theme.MealWay" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/MainColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:alertDialogTheme">@style/CustomAlertDialogTheme</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@color/background_data_picker</item>
        <item name="android:colorBackground">@color/background_data_picker</item>
        <item name="colorSurface">@color/background_data_picker</item>
        <item name="android:textColorPrimary">@color/text_data_picker</item>
        <item name="colorOnSurface">@color/text_data_picker</item>
    </style>

    <style name="CalendarHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/calendar_header_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomPickerTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@color/background_data_picker</item>
        <item name="android:colorBackground">@color/background_data_picker</item>
        <item name="colorSurface">@color/background_data_picker</item>
        <item name="colorSurfaceContainerHigh">@color/background_data_picker</item>

        <item name="colorPrimary">@color/color_picker_header</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:headerBackground">@color/color_picker_header</item>

        <item name="android:textColorPrimary">@color/text_data_picker</item>
        <item name="android:textColorSecondary">@color/text_data_picker</item>
        <item name="colorOnSurface">@color/text_data_picker</item>

        <item name="colorSecondary">@color/day_selected_color</item>
        <item name="colorControlActivated">@color/day_selected_color</item>

        <item name="colorAccent">@color/color_picker_button</item>
        <item name="android:colorAccent">@color/color_picker_button</item>
        <item name="colorPrimaryInverse">@color/color_picker_button</item>

        <item name="buttonBarPositiveButtonStyle">@style/PickerButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/PickerButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/PickerButtonStyle</item>
    </style>

    <style name="PickerButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_picker_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/color_picker_header</item>
        <item name="android:calendarTextColor">@color/text_data_picker</item>
    </style>



    <style name="CustomBottomSheetDialog" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="colorPrimary">@color/MainColor</item>
        <item name="colorSecondary">@color/MainColor</item>
        <item name="colorTertiary">@color/MainColor</item>
        <item name="colorSurface">@color/background_data_picker</item>
        <item name="colorOnSurface">@color/text_data_picker</item>
        <item name="colorOutline">?attr/colorOnSurface</item>
        <item name="colorOutlineVariant">?attr/colorOnSurface</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/CustomBottomSheetShape</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="CustomBottomSheetShape" parent="">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RoundedTopCorners" parent="">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>