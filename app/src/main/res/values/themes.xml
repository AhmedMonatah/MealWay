<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MealWay" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/MainColor</item>
        <item name="colorSecondary">@color/MainColor</item>
        <item name="android:statusBarColor">@color/MainColor</item>
    </style>

    <style name="Theme.MealWay" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/MainColor</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CalendarHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#8A8A8A</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>